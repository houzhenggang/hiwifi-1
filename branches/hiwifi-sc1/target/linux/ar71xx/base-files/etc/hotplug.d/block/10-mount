STORAGE=/tmp/data
SWAP="$STORAGE/.swap"
device=`basename $DEVPATH`

case "$device" in
"sd"*)
	case "$ACTION" in
	add)
		e2fsck -p /dev/$device
		mkdir -p /tmp/$device
		mount -t ext3 /dev/$device /tmp/$device

		if [ $? -ne "0" ]; then
			echo y | mkfs.ext3 /dev/$device
			mount -t ext3 /dev/$device /tmp/$device
		fi

		ln -ns /tmp/$device $STORAGE

		[ ! -e $STORAGE/var/lib ] && mkdir -p $STORAGE/var/lib

		# create swap
		[ ! -e "$SWAP" ] && dd if=/dev/zero of="$SWAP" bs=1M count=64 > /dev/null 2>&1
		swapon $SWAP > /dev/null 2>&1
		if [ $? -ne "0" ]; then
			mkswap $SWAP > /dev/null
			swapon $SWAP
		fi	
		;;
	remove)
		swapoff $SWAP
		rm $STORAGE
		umount -l /tmp/$device
		;;
	esac
	;;
esac

